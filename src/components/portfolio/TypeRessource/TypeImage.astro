---
interface Props {
    className?: string;
    ressource?: string;
}

const { className="", ressource="src/assets/icons/cb_logo_grey.svg"} = Astro.props;
---

<div class="img-content">
    <img src={ressource} class={className}/>
</div>

<style>
    .img-content {
        display: flex;
        justify-content: center;
    }

    img {
        height: 100%;
    }
</style>