---
import HoverOverlay from '@images/hover_gallery_element.svg'

interface Props {
    project: {
    title: string;
    description: string;
    image: string;
    miniature: string;
    skills: string[];
    tools: string[];
    date: string;
    };
}

const {project} = Astro.props;
---


<a class="gallery-element" rel="prefetch" href={`${project.title}`}>
    <img class="miniature" src={project.miniature}/>
    <div class="hover">
        <img class="hover_overlay" src={HoverOverlay}/>
        <h4 class="titre">{project.title}</h4>
        <ul class="skills">
            {project.skills.map((skill) => (
                <li>{skill}</li>
            ))}
        </ul>
    </div>
</a>

<style>
    .gallery-element {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        background: rgb(36, 36, 36);
        aspect-ratio: 1/1;
        transition: transform 0.1s ease-in-out;
    }

    .gallery-element:hover {
        z-index: 1;
        transform: scale(1.05);
    }

    .miniature {
        max-width: 100%;
        max-height: 100%;
    }

    .hover {
        position: absolute;
        opacity: 0;
        width: 100%;
        height: 100%;
        transition: opacity 0.3s ease-in-out;
    }

    .hover:hover {
        opacity: 1;
    }

    .hover_overlay {
        width: 100%;
        height: 100%;
    }

    .titre {
        color: #9D51C0;
        font-family: 'Poppins Bold';
        position: absolute;
        top: 4%;
        right: 4%;
        font-size: 26px;
        text-align: end;
        margin: 0;
    }

    .skills {
        position: absolute;
        bottom: 0;
        left: 0;
    }

    .skills li {
        padding: 2px;
        background: #9D51C0;
        margin: 2px;
        border-radius: 3px;
        font-size: 1vw;
        text-align: center;
        width: fit-content;
    }

    @media screen and (max-width: 1920px){
        .titre {
            font-size: 1.5vw;
        }
    }
</style>