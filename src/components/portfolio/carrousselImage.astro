---
import QuestionCrystal from '@icons/question_crystal.svg'

interface Props {
    className?: string;
    image?: string;
    titre?: String;
    backgroundColor?: String;
}

const {  className='', image=QuestionCrystal, titre='Titre' , backgroundColor='rgba(225, 225, 225, 0.4)' } = Astro.props;
---

<div class={`carroussel-image ${className}`} style={`background-color: ${backgroundColor};`}>
    <img src={image}/>
    <p>{titre}</p>
</div>

<style>
    .carroussel-image{
        padding: 4px;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        border-radius: 20px;
        backdrop-filter: blur(5px);
        min-width: 30%;
        aspect-ratio: 8/6;
        position: relative;
    }

    img {
        border-radius: 3px;
        height: 100%;
        max-width: 100%;
        max-height: 100%;
        pointer-events: none;
    }

    p {
        text-align: center;
        position: absolute;
        bottom: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: rgba(0, 0, 0, 0.4);
        width: 100%;
        height: 15%;
    }

    @media screen and (max-width: 1000px) {
        .carroussel-image{
            border-radius: 10px;
        }

        p {
            font-size: 12px;
        }
    }

    @media screen and (max-width: 500px) {
        .carroussel-image{
            padding: 0;
        }

        p {
            font-size: 6px;
        }
    }
</style>