---
import DiscordLogo from "@icons/discord_logo.svg"
import CBPP from "@icons/cb_pp.jpg"

import MenuButton from "./MenuButton.astro";
---

<div id="navigateur">
    <div id="navigateur_c1"><img src={DiscordLogo}/></div>
    <div id="navigateur_c2"><a href="/"><img src={CBPP}/></a></div>
    <nav  id="navigateur_c3">
        <ul class="nav-menu">
            <li><a href="/about">Ã€ propos</a></li>
            <li><a href="/cv">CV</a></li>
            <li><a href="/portfolio">Portfolio</a></li>
            <li><a href="/contact">Contact</a></li>
        </ul>
        <MenuButton />
    </nav>
</div>

<style>
    #navigateur{
        display: grid;
        grid-template-columns: 1fr 50px 1fr;
        padding: 10px;
        max-width: 1920px;
        margin: auto;
    }

    #navigateur *{
        max-height: 50px;
    }

    #navigateur_c1{
        display: flex;
        align-items: center;
        padding-left: 30px;
    }

    #navigateur_c2{
        display: flex;
        align-items: center;
        justify-content: center;
    }

    #navigateur_c2 img{
        border-radius:50%;
        width:42px;
        padding: 4px;
        background-image: linear-gradient(135deg, rgba(68,150,247,1) 20%, rgba(178,111,245,1) 55%, rgba(245,111,232,0) 75%);
    }

    #navigateur_c2 img:is(:hover, :focus-within){
        cursor: pointer;
    }

    #navigateur_c3, .nav-menu {
        display: flex;
        align-items: center;
        justify-content: end;
    }

    .nav-menu li{
        margin: 0 30px 0 30px;
    }

    .nav-menu a{
        display:flex;
        position:relative;
    }

    .nav-menu a::after{
        content: '';
        position: absolute;
        width: 100%;
        transform: scaleX(0);
        height: 2px;
        bottom: 0;
        left: 0;
        background: white;
        transform-origin: bottom;
    }

    .nav-menu a:hover::after{
        animation: underline-bounce 0.4s ease-in-out;
        transform: scaleX(1);
        transform-origin: bottom;
    }

    @keyframes underline-bounce {
        0%{
            transform: scaleX(0);
        }

        50%{
            transform: scaleX(1.1);
        }

        75%{
            transform: scaleX(0.9);
        }

        100%{
            transform: scaleX(1);
        }
    }

    @media screen and (max-width: 1000px) {
        .nav-menu {
            display: none;
        }
    }

</style>