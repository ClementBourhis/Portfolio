---
import IMACIcon from "@cv/images/imac_icon.png"
import IUTIcon from "@cv/images/iut_icon.png"
import KBTIcon from "@cv/images/kbt_icon.png"

---

<div id="graduations">
    <h1>Diplômes</h1>
    <div class="grid">
        <div class="graduation imac">
            <img src={IMACIcon} />
            <h2>Ingénieur IMAC</h2>
        </div>

        <div class="graduation iut">
            <img src={IUTIcon} />
            <h2>DUT R&T</h2>
        </div>

        <div class="graduation kbt">
            <img src={KBTIcon} />
            <h2>BAC S - SVT</h2>
        </div>
    </div>
</div>

<style>
    #graduations {
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        width: 100vw;
        max-width: 1920px;
        margin: auto;
        overflow: hidden;
    }

    h1 {
        margin-left: 50px;
        position: relative;
        font-family: "Poppins Bold";
    }

    h1::after {
        content: '';
        position: absolute;
        width: 100%;
        height: 2px;
        bottom: -5px;
        left: 0;
        background: linear-gradient(135deg, rgb(255, 255, 255) 0%, rgb(51, 178, 216) 5%, rgba(245,111,232,0) 70%);
        transform-origin: bottom;
    }

    .grid {
        display: grid;
        height: 80%;
        grid-template-columns: 1fr 1fr 1fr;
    }

    .graduation {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    img {
        margin: 15px;
        border-radius: 500px;
        border: white solid 5px;
        width: 100%;
        max-width: 200px;
    }

    @media screen and (max-width: 1000px) {
        .grid {
            gap: 10px;
        }

        img {
            width: 80%;
            border: white solid 2px;
        }

        h2 {
            font-size: 3vw;
        }
    }
</style>