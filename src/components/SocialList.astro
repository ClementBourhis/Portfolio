---
import GitIcon from "@icons/github_icon.svg";
import InIcon from "@icons/linkedin_icon.svg"
---

<div class="social-list">
    <a href="https://github.com/ClementBourhis"><img src={GitIcon}/></a>
    <a href="https://www.linkedin.com/in/clement-bourhis"><img src={InIcon}/></a>
</div>

<style>
    .social-list{
        height: 40px;
    }

    a {
        height: 100%;
        width: 100%;
    }

    img {
        width: 40px;
        transition: filter 0.2s ease;
    }

    img:hover {
        filter: brightness(0.7);
    }
</style>