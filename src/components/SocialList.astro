---
import GitIcon from "@icons/github_icon.svg";
import InIcon from "@icons/linkedin_icon.svg";

//Props
export interface Props {
	className?: string;
    height?: string;
}

const {className = "", height="50px"} = Astro.props;
---

<nav class={className}>
    <a href="https://github.com/ClementBourhis" target="_blank"><img style={`height: ${height};`} src={GitIcon}/></a>
    <a href="https://www.linkedin.com/in/clement-bourhis" target="_blank"><img style={`height: ${height};`} src={InIcon}/></a>
</nav>

<style>
    img {
        transition: filter 0.2s ease;
    }

    img:hover {
        filter: brightness(0.7);
    }
</style>