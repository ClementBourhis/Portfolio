---
import Socle from "@images/recent_work_image.svg"
import Crystal from "@icons/crystal.svg"

import Carroussel from "@components/portfolio/carroussel.astro";
---

<div id="recent_work">
    <div class="titre">
        <img class="crystal" src={Crystal}/>
        <h2>Mes derniers projets</h2>
        <img class="crystal reverse" src={Crystal}/>
    </div>
    <div class="carroussel">
        <img class="socle" src={Socle}/>
        <div class="projets"><Carroussel /></div>
        <img class="socle reverse" src={Socle}/>
    </div>
</div>

<style>
    #recent_work{
        height: 100vh;
        width: 100vw;
        max-width: 1920px;
        margin: auto;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        overflow: hidden;
    }

    .titre{
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .crystal{
        transform-origin: 50% 50%;
        rotate: -90deg;
    }

    .crystal::after{
        content: "";
        width: 10vw;
        height: 4px;
        background: white;
    }

    .reverse{
        transform: rotate(180deg);
    }

    h2 {
        margin: 0 50px 0 50px;
    }

    .carroussel {
        width: 100%;
        display: grid;
        grid-template-columns: 15% 1fr 15%;
        min-width: 300px;
    }

    .socle {
        max-width: 100%;
        user-select: none;
        pointer-events: none;
    }

    .projets{
        height: 75%;
        width: 100%;
        margin: auto;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    @media screen and (max-width: 1000px){
        .titre{
            width: 100%;
        }

        h2 {
            font-size: 15px;
            text-align: center;
        }

        .crystal {
            height: 5vh;
        }
    }
</style>