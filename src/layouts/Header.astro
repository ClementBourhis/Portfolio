---
//Props
export interface Props {
	title?: string;
}

const { title = "Default Title" } = Astro.props;
---

<head>
	<meta charset="UTF-8" />
	<meta name="description" content="Astro description">
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
</head>

<!-- Définition du CSS global -->
<style is:global>
	/* Déclaration des fonts */
	@font-face {
    font-family: 'Poppins Regular';
    src: url('src/assets/fonts/poppins-regular-webfont.woff2') format('woff2'),
         url('src/assets/fonts/poppins-regular-webfont.woff') format('woff');
    font-weight: normal;
    font-style: normal;
  	}

	@font-face {
    font-family: 'Poppins Bold';
    src: url('src/assets/fonts/poppins-bold-webfont.woff2') format('woff2'),
         url('src/assets/fonts/poppins-bold-webfont.woff') format('woff');
    font-weight: bold;
    font-style: normal;
  	}

	html {
		font-family: 'Poppins Regular';
		color: white;
		background: var(--background-gradient, linear-gradient(180deg, #0F103F 3.13%, #1A45DF 45.31%, #8161DE 98.96%));
		min-height: 100vh;
	}

	body, p, h1, h2, h3, ul {
		margin: 0;
		padding: 0;
	}

	li {
		list-style: none;
	}

	a {
		color:white;
		text-decoration: none;
	}
</style>
